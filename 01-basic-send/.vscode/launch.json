{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "sales",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/sales/bin/Debug/net6.0/sales.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/sales",
            "stopAtEntry": false,
            "console": "internalConsole",
        },
        {
            "name": "website",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/website/bin/Debug/net6.0/website.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/website",
            "stopAtEntry": false,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/website/Views"
            }
        },
    ],
    "compounds": [
        {
            "name": "Sane/Receive - (build)",
            "preLaunchTask": "build",
            "configurations": [
                "sales",
                "website"]
        },
        {
            "name": "Sane/Receive - (no build)",
            "configurations": [
                "sales",
                "website"]
        }
    ]
}
