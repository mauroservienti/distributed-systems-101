    "version": "0.2.0",
    "configurations": [
        {
            "name": "Marketing.Api",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/Marketing.Api/bin/Debug/net6.0/Marketing.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Marketing.Api",
            "stopAtEntry": false,
            "console": "internalConsole",
        },
        {
            "name": "Sales.Api",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/Sales.Api/bin/Debug/net6.0/Sales.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Sales.Api",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Shipping.Api",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/Shipping.Api/bin/Debug/net6.0/Shipping.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Shipping.Api",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Warehouse.Api",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/Warehouse.Api/bin/Debug/net6.0/Warehouse.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/Warehouse.Api",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "WebApp",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/src/WebApp/bin/Debug/net6.0/WebApp.dll",
            "args": [],
            "cwd": "${workspaceFolder}/src/WebApp",
            "stopAtEntry": false,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}",
                "windows": {
                    "command": "cmd.exe",
                    "args": "/C start ${auto-detect-url}"
                },
                "osx": {
                    "command": "open"
                },
                "linux": {
                    "command": "xdg-open"
                }
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/src/WebApp/Views"
            }
        },
    ],
    "compounds": [
        {
            "name": "Lesson 2 - (build)",
            "preLaunchTask": "build",
            "configurations": [
                "Marketing.Api",
                "Sales.Api", 
                "Shipping.Api", 
                "Warehouse.Api", 
                "WebApp"]
        },
        {
            "name": "Lesson 2 - (no build)",
            "configurations": [
                "Marketing.Api",
                "Sales.Api", 
                "Shipping.Api", 
                "Warehouse.Api", 
                "WebApp"]
        }
    ]
}